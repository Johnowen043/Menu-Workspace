<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0
      http://www.kde.org/standards/kcfg/1.0/kcfg.xsd" >
  <kcfgfile name=""/>

  <group name="General">
    <entry name="showCategorizedApps" type="Bool">
      <label>Show categorized apps by default</label>
      <default>true</default>
    </entry>
    <entry name="hideAllAppsCategory" type="Bool">
      <label>Hide All Apps category from menu</label>
      <default>true</default>
    </entry>
    <entry name="hidePowerCategory" type="Bool">
      <label>Hide Power/Session category from menu</label>
      <default>true</default>
    </entry>
    <entry name="hideSessionsCategory" type="Bool">
      <label>Hide Desktop Sessions category from menu</label>
      <default>true</default>
    </entry>
    <entry name="pin" type="Bool">
      <default>false</default>
    </entry>
    <entry name="appsIconSize" type="Enum">
      <default>2</default>
    </entry>
    <entry name="displayPosition" type="Enum">
      <label>Position.</label>
      <default>1</default>
    </entry>
    <entry name="showGridFirst" type="Bool">
      <default>true</default>
    </entry>
    <entry name="showSearch" type="Bool">
      <default>true</default>
    </entry>
    <entry name="icon" type="String">
      <default>assets/logo</default>
    </entry>
    <entry name="useCustomButtonImage" type="Bool">
      <default>false</default>
    </entry>
    <entry name="customButtonImage" type="Url">
      <default></default>
    </entry>
    <entry name="showFilterList" type="Bool">
      <default>true</default>
    </entry>
    <entry name="appNameFormat" type="Int">
      <default>0</default>
    </entry>
    <entry name="limitDepth" type="Bool">
      <default>false</default>
    </entry>
    <entry name="numberColumns" type="Int">
      <default>4</default>
    </entry>
    <entry name="numberRows" type="Int">
      <default>4</default>
    </entry>
    <entry name="transparencyHead" type="Int">
      <default>50</default>
    </entry>
    <entry name="transparencyFooter" type="Int">
      <default>50</default>
    </entry>
    <entry name="favoriteApps" type="StringList">
      <default>preferred://browser,kontact.desktop,systemsettings.desktop,org.kde.dolphin.desktop,ktp-contactlist.desktop,org.kde.kate.desktop</default>
    </entry>
    <entry name="favoriteSystemActions" type="StringList">
      <label>List of system action favorites.</label>
      <default>logout,reboot,shutdown</default>
    </entry>
    <entry name="hiddenApplications" type="StringList">
      <default>false</default>
    </entry>
    <entry name="useExtraRunners" type="Bool">
      <default>true</default>
    </entry>
    <entry name="labels2lines" type="Bool">
      <default>true</default>
    </entry>
    <!-- ENHANCED: More comprehensive search runners for better app finding -->
    <entry name="extraRunners" type="StringList">
      <default>bookmarks,baloosearch,krunner_recentdocuments,krunner_placesrunner,krunner_webshortcuts,locations,windows,krunner_dictionary,krunner_appstream</default>
    </entry>
    <!-- NEW: Search runners configuration for comprehensive app search -->
    <entry name="searchRunners" type="StringList">
      <label>List of search runners for finding applications</label>
      <default>krunner_services,krunner_systemsettings,calculator,unitconverter,baloosearch,krunner_recentdocuments,krunner_placesrunner,krunner_bookmarksrunner,krunner_webshortcuts,krunner_shell,locations,windows,krunner_dictionary,krunner_kill,krunner_kwin,krunner_appstream</default>
    </entry>
    <entry name="alignResultsToBottom" type="Bool">
      <default>true</default>
    </entry>
    <entry name="switchCategoriesOnHover" type="Bool">
      <label>Whether to switch between menu categories by hovering them.</label>
      <default>true</default>
    </entry>
    <entry name="removeApplicationCommand" type="String">
      <default>muon-discover --application</default>
    </entry>
    <entry name="showAtCenter" type="Bool">
      <default>true</default>
    </entry>
    <entry name="showFavoritesFirst" type="Bool">
      <default>false</default>
    </entry>
    <entry name="favoritesPortedToKAstats" type="Bool">
      <label>Are the favorites ported to use KActivitiesStats to allow per-activity favorites</label>
      <default>false</default>
    </entry>
    <entry name="showInfoUser" type="Bool">
      <default>true</default>
    </entry>
    <entry name="userShape" type="Enum">
      <default>0</default>
    </entry>

    <entry name="aboutThisComputerSettings" type="String">
      <default>kinfocenter</default>
    </entry>
    <entry name="systemPreferencesSettings" type="String">
      <default>systemsettings</default>
    </entry>
    <entry name="appStoreSettings" type="String">
      <default>plasma-discover</default>
    </entry>
    <entry name="forceQuitSettings" type="String">
      <default>xkill</default>
    </entry>
    <entry name="homeSettings" type="String">
      <default>dolphin /home</default>
    </entry>
    <entry name="rebootEnabled" type="Bool">
      <default>false</default>
    </entry>
    <entry name="shutDownEnabled" type="Bool">
      <default>true</default>
    </entry>
    <entry name="aboutThisComputerEnabled" type="Bool">
      <default>false</default>
    </entry>
    <entry name="systemPreferencesEnabled" type="Bool">
      <default>false</default>
    </entry>
    <entry name="appStoreEnabled" type="Bool">
      <default>false</default>
    </entry>
    <entry name="forceQuitEnabled" type="Bool">
      <default>false</default>
    </entry>
    <entry name="sleepEnabled" type="Bool">
      <default>true</default>
    </entry>
    <entry name="lockScreenEnabled" type="Bool">
      <default>true</default>
    </entry>
    <entry name="logOutEnabled" type="Bool">
      <default>false</default>
    </entry>
    <entry name="homeEnabled" type="Bool">
      <default>false</default>
    </entry>

  </group>

</kcfg>
